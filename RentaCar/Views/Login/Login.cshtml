@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        <h2 style="text-align:center;">Inicie Sesión</h2>
        <hr class="hr-custom" />

        <form action="@Url.Content("~/Login/Login")" method="post">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label class="col-md-2">Email</label>
                        <div>
                            <input name="user" type="text" class="form-control" placeholder="Su nombre de usuario...">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label class="col-md-2">Contraseña</label>
                        <div>
                            <input name="contrasenia" type="password" class="form-control" placeholder="Su contraseña...">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-2" style="margin-left:30.666667%;">
                        <input type="submit" value="Ingresar" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
    </div>
}

<link href="~/Content/login-style.css" rel="stylesheet" />
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}